{
  // "plugin": ["oh-my-opencode"],
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "keybinds": {
    "app_exit": "ctrl+d,<leader>q"
  },
  "mcp": {
    "github": {
      "type": "local",
      "command": ["docker", "run", "-i", "--rm", "-e", "GITHUB_PERSONAL_ACCESS_TOKEN", "ghcr.io/github/github-mcp-server"],
      "environment": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GH_TOKEN}"
      },
      "enabled": true
    },
    "kanban": {
        "type": "local",
        "command": ["kanban", "mcp"],
        "enabled": true
    },
    "applescript": {
      "type": "local",
      "command": ["uvx", "mcp-applescript"],
      "environment": {
        "ALLOWED_APPS": "calendar",
        "BLOCK_DANGEROUS": "true",
        "TIMEOUT": "30"
      },
      "enabled": true
    }
  },
  "agent": {
      "code-reviewer": {
      "description": "Reviews code for best practices and potential issues",
      "mode": "subagent",
      "prompt": "You are a code reviewer. Focus on security, performance, and maintainability.",
      "tools": {
        "write": false,
        "edit": false
      }
    },
    "kanban": {
      "mode": "subagent",
      "description": "Create and manage tasks on the Kanban board using the local Kanban MCP server",
      "prompt": "{file:./prompts/kanban.md}",
      "tools": {
        "write": false,
        "edit": false
      }
    },
    "calendar": {
      "mode": "subagent",
      "description": "Manage macOS Calendar events - lookup, view details, and edit events with confirmations",
      "prompt": "{file:./prompts/calendar.md}",
      "tools": {
        "write": false,
        "edit": false
      }
    }
  }
}
